<main>
  <p id="notice"></p>
  <% if @user.errors.any? %>
    <%= @user.errors.count %>error prohibited this obj from being saved:
    <ul>
      <% @user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  <% end %>
    <div class="container">
      <div class="row">
        <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
          <h2>User info</h2>
            <%= form_with model: @user do |f| %>
              <div class="field">
                <%= f.label :name %><br />
                <%= f.text_field :name, autofocus: true %>
              </div>

              <div class="field">
                <%= f.label :image %><br />
                <%= f.file_field :profile_image, accept: 'image/*' %>
              </div>

              <div class="field">
                <%= f.label :introduction %><br />
                <%= f.text_area :introduction, autocomplete: "introduction" %>
              </div>

              <%= f.submit 'Update User' %>
            <% end %>
        </div>
      </div>
    </div>
</main>